<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Invoice</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
    <style>
      body {
        font-family: 'Roboto', sans-serif;
        font-size: 13px;
        margin: 40px;
        color: #333;
      }

      .header {
        text-align: center;
        color: #007bff;
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 10px;
      }

      .logo {
        text-align: center;
        margin-bottom: 8px;
      }

      .logo img {
        height: 60px;
        object-fit: contain;
      }

      .company-info {
        text-align: center;
        font-size: 13px;
        margin-bottom: 20px;
      }

      .info-section {
        display: flex;
        justify-content: space-between;
        margin-bottom: 25px;
        border: 1px solid #ccc;
        padding: 15px;
        background: #f9f9f9;
      }

      .info-block {
        width: 48%;
      }

      .info-block h3 {
        margin-bottom: 8px;
        color: #555;
        font-size: 16px;
        border-bottom: 1px solid #ddd;
        padding-bottom: 4px;
      }

      .info-block p {
        margin: 4px 0;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 30px;
      }

      table th,
      table td {
        border: 1px solid #ddd;
        padding: 10px 12px;
        text-align: left;
      }

      table th {
        background-color: #f1f1f1;
        font-weight: 600;
      }

      .summary {
        text-align: right;
        margin-bottom: 40px;
      }

      .summary p {
        margin: 6px 0;
      }

      .final-amount {
        font-size: 18px;
        font-weight: bold;
        color: #007bff;
        margin-top: 12px;
      }

      .footer {
        text-align: center;
        color: gray;
        font-size: 12px;
        border-top: 1px solid #ccc;
        padding-top: 15px;
      }
    </style>
  </head>

  <body>
    <!-- Logo -->
    <div class="logo">
      <% if (logoUrl) { %>
        <img src="<%= logoUrl %>" alt="Company Logo" />
      <% } else { %>
        <p><strong><%= companyName %></strong></p>
      <% } %>
    </div>

    <!-- Company Info -->
    <div class="company-info">
    
      <p><%= companyAddress %></p>
      <p>Email: <%= companyEmail %> | Phone: <%= companyPhone %></p>
    </div>

    <!-- Invoice Title -->
    <div class="header">INVOICE</div>

    <!-- Info Section -->
    <div class="info-section">
      <div class="info-block">
        <h3>Customer Info</h3>
        <p><strong>Name:</strong> <%= customerName %></p>
        <p><strong>Email:</strong> <%= email %></p>
        <p><strong>Phone:</strong> <%= phone %></p>
        <p><strong>Billing Address:</strong> <%= billingAddress %></p>
<p><strong>Shipping Address:</strong> <%= shippingAddress %></p>
      </div>

      <div class="info-block">
        <h3>Order Info</h3>
        <p><strong>Invoice ID:</strong> <%= invoiceId %></p>
       <p><strong>Date:</strong> <span id="createdAt"></span></p>
<script>
  (function () {
    const date = new Date("<%= createdAt %>");
    const options = {
      timeZone: "Asia/Kolkata",
      day: "2-digit",
      month: "short",
      year: "numeric",
      hour: "2-digit",
      minute: "2-digit",
      hour12: true,
    };
    const formatted = date.toLocaleString("en-IN", options);
    document.getElementById("createdAt").innerText = formatted;
  })();
</script>
     
    
      </div>
    </div>

    <!-- Items Table -->
    <table>
      <thead>
        <tr>
          <th>Item</th>
          <th>Quantity</th>
          <th>Unit Price (₹)</th>
          <th>Total (₹)</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(item => { %>
          <tr>
           <td>
  <%= item.name %>
  <% if (item.variantName) { %>
    <div style="font-size: 12px; color: gray;">(<%= item.variantName %>)</div>
  <% } %>
</td>

            <td><%= item.quantity %></td>
            <td><%= item.unitPrice.toFixed(2) %></td>
            <td><%= (item.unitPrice * item.quantity).toFixed(2) %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <!-- Summary -->
    <div class="summary">
      <p><strong>Subtotal:</strong> ₹<%= subtotal.toFixed(2) %></p>

      <% if (discountAmount > 0) { %>
        <p><strong>Discount:</strong> - ₹<%= discountAmount.toFixed(2) %></p>
      <% } %>

      <% if (abandentDiscountAmount > 0) { %>
        <p><strong>Abandoned Discount:</strong> - ₹<%= abandentDiscountAmount.toFixed(2) %></p>
      <% } %>

      <% if (taxAmount > 0) { %>
        <p><strong>Tax (<%= taxType %> - <%= appliedTaxRate %>%):</strong> ₹<%= taxAmount.toFixed(2) %></p>
      <% } %>

      <% if (shippingRate > 0) { %>
        <p><strong>Shipping:</strong> ₹<%= shippingRate.toFixed(2) %></p>
      <% } %>

      <div class="final-amount">
        Final Payable: ₹<%= finalAmount.toFixed(2) %>
      </div>
    </div>

    <!-- Footer -->
    <div class="footer">
      <p>Thank you for your purchase!</p>
    </div>
  </body>
</html>
